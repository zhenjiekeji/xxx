package com.uk.sec.framework.security.model;

import java.io.Serializable;

/**
 * @author xzw
 */
public interface UserInfo<PK extends Serializable> {
    /**
     * 登录用户的主键.
     * 
     * @return
     */
    public PK getSecLoginId();
    
    /**
     * 登录用户名
     * 
     * @return
     */
    public String getLoginName();
    
    /**
     * 登录用户的显示名.
     * 
     * @return
     */
    public String getLoginDisplayName();
    
}
